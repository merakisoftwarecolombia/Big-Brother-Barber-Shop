# WhatsApp Cloud API Configuration
# Get these from Meta Developer Portal: https://developers.facebook.com/

# Verify token for webhook validation (you define this)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token

# Access token from Meta Developer Portal
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# Phone Number ID from Meta Developer Portal
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Server Configuration
PORT=3000

# Database path (for Docker, use /app/data/appointments.db)
DATABASE_PATH=./data/appointments.db